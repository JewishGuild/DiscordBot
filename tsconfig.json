{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "module": "ES2022",
    "rootDir": "./",
    "typeRoots": ["./**/*", "./config", "node_modules/@types"],
    "types": ["node", "express"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "baseUrl": "./"
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist", "Frontend"]
}
